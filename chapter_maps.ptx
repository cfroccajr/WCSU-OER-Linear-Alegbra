        <exercise>
            <statement>
                <p>
                    Find the inverse of the given matrix:
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=262">p.252</url>)
                    <me>
                        A=\left[
                            \begin{array}{rrr}
                                1 \amp 2 \amp 4\\
                                -1 \amp 0 \amp 2\\
                                0 \amp 3 \amp 10
                            \end{array}
                        \right]
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Find the kernel (i.e. null space) for the transformation defined by multiplication by:
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=210">p.200</url>)
                    <me>
                        A=\left[
                            \begin{array}{rrr}
                                3 \amp 2 \amp 5\\
                                -1 \amp 0 \amp 2
                            \end{array}
                        \right]
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Is the transformation defined by the given matrix one-to-one?  Is it onto?
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=282">p.272</url>)
                    <me>
                        B=\left[
                            \begin{array}{rr}
                                1 \amp 2 \\
                                -3 \amp -5\\
                                4 \amp 7\\
                            \end{array}
                        \right]
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Find the domain, codomain, and range for the transformation defined by the matrix.
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=230">p.220</url>)
                    <me>
                        C=\left[
                            \begin{array}{rrrr}
                                1 \amp 0 \amp 3 \amp 0\\
                                -3 \amp 1\amp -5\amp 1\\
                                2 \amp 1\amp 2\amp 2\\
                            \end{array}
                        \right]
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise xml:id="first_basis_question">
            <statement>
                <p>
                    Find the transformation, <m>Rep_{\mathcal{E}_3,\mathcal{B}}</m>, from the standard basis, <m>\mathcal{E}_3</m>, to the basis <m>\mathcal{B}</m>.
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=210">p.200</url>)
                    <me>
                        \mathcal{E}_3=
                        \left\{
                            \left(
                                \begin{array}{r}
                                    1 \\ 0 \\0
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 1 \\0
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 0 \\1
                                \end{array}
                            \right)
                        \right\},\ 
                        \mathcal{B}=
                        \left\{
                            \left(
                                \begin{array}{r}
                                    1 \\ 0 \\-1
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 1 \\1
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    1 \\ 1 \\2
                                \end{array}
                            \right)
                        \right\}
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Use your answer from <xref ref="first_basis_question" /> to find the transformation from <m>\mathcal{C}</m> to <m>\mathcal{B}</m>, <m>Rep_{\mathcal{C}, \mathcal{B}}</m>.
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=267">p.257</url>)
                    <me>
                        \mathcal{C}=
                        \left\{
                            \left(
                                \begin{array}{r}
                                    1 \\ 0 \\ 0
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    1 \\ 1 \\0
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    1 \\ 1 \\1
                                \end{array}
                            \right)
                        \right\}
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Find the orthogonal compliment of the subspace defined by the set of vectors:
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=293">p.283</url>)
                    <me>
                        \mathcal{D}=
                        \left\{
                            \left(
                                \begin{array}{r}
                                    1 \\ 0 \\ 0 \\ 1
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 0 \\ 2 \\ -1
                                \end{array}
                            \right)
                        \right\}
                    </me>
                </p>
            </statement>
        </exercise>

        <exercise>
            <statement>
                <p>
                    Use the Gram-Schmidt process to create and orthogonal basis to replace <m>\mathcal{D}</m>.
                    (compare to <url href="http://joshua.smcvt.edu/linearalgebra/book.pdf#page=285">p.275</url>)
                    <me>
                        \mathcal{D}=
                        \left\{
                            \left(
                                \begin{array}{r}
                                    1 \\ 1 \\1
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 2 \\0
                                \end{array}
                            \right),
                            \left(
                                \begin{array}{r}
                                    0 \\ 1 \\1
                                \end{array}
                            \right)
                        \right\}
                    </me>
                </p>
            </statement>
        </exercise>

