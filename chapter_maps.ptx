                        <me>
                            \mathcal{D}=
                            \left\{
                                \left(
                                    \begin{array}{r}
                                        1 \\ 1 \\1
                                    \end{array}
                                \right)
                                \left(
                                    \begin{array}{r}
                                        0 \\ 2 \\0
                                    \end{array}
                                \right),
                                \left(
                                    \begin{array}{r}
                                        0 \\ 1 \\1
                                    \end{array}
                                \right)
                            \right\}
                        </me>
                    </p>
                </statement>
            </exercise>

